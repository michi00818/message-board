<div class="panel panel-default">
   <div class="panel-heading">
      メッセージ一覧
   </div>
   
   <div class="panel-body">
      <% @messages.each do |message| %>
         <span class="label label-info"><%= message.name %></span>
         <%= message.body %>
         <br>
      <% end %>
   </div>
</div>




<form class="form-horizontal">
   <%= form_for(Message.new) do |f| %>
   <div class="form-group">
      <label for=message_name  class:"col-sm-2 control-label">名前</label>
      <div class="col-sm-10">
         <%= f.text_field :name,class: "control-label" %>
      </div>
   </div>
   
   <div class="form-group">
      <label for="massage_body" class:"col-sm-2 control-label">内容</label>
      <div class="col-sm-10">
         <%= f.text_area :body,size: "40x5" ,class: "control-label", placeholder: "メッセージを書いて下さい" %>
      </div>
   
   <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class:"btn btn-sm btn-primary" %>
      </div>
   </div>
   <% end %>
</form>