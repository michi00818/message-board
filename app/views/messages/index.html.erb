<div class="panel panel-default">
   <div class="panel-heading">
      メッセージ一覧
   </div>
   
   <div class="panel-body">
      <% @messages.each do |message| %>
         <span class="label label-info"><%= message.name %></span>
         <%= message.body %>
         <br>
      <% end %>
   </div>
</div>

<div class="form-horizontal">
   <%= form_for(Message.new,) do |f| %>
   <div class="form-group">
      <label for=message_name  class="col-sm-1 control-label">名前</label>
      <div class="col-sm-4">
         <%= f.text_field :name , class: "form-control" %>
      </div>
   </div>
   
   <div class="form-group">
      <label for="massage_body" class="col-sm-1 control-label">内容</label>
      <div class="col-sm-4">
         <%= f.text_area :body,:size=>"40x5" ,class: "form-control", placeholder: "メッセージを書いて下さい" %>
      </div>
   </div>
   
   <div class="form-group">
      <div class="col-sm-offset-1 col-sm-11">
         <%= f.submit class:"btn btn-sm btn-primary" %>
      </div>
   </div>
   <% end %>
</div>